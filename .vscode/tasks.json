    "version": "2.0.0",
    "tasks": [
        {
            //  Connect to Blue Pill via OpenOCD and show the ARM Semihosting log.
            "label": "üîó Connect To STM32 Blue Pill",
            "type": "shell",
            "windows": {
                "command": "c:\\openocd\\bin\\openocd -f interface/stlink-v2.cfg -f target/stm32f1x.cfg -f scripts/connect.ocd"
            },
            "osx": {
                "command": "openocd -f interface/stlink-v2.cfg -f target/stm32f1x.cfg -f scripts/connect.ocd"
            },
            "linux": {
                "command": "openocd -f interface/stlink-v2.cfg -f target/stm32f1x.cfg -f scripts/connect.ocd"
            },
            "problemMatcher": [],
            "group": "test",
            "presentation": {
                "reveal": "always",
                "panel": "dedicated"
            }
        },
        {
            "label": "‚≠ïÔ∏è Restart STM32 Blue Pill",
            "type": "shell",
            "command": "arm-none-eabi-gdb -x scripts/restart.gdb",
            "problemMatcher": [],
            "group": "test",
            "presentation": {
                "reveal": "never",
                "panel": "shared"
            }
        },
    ]
}